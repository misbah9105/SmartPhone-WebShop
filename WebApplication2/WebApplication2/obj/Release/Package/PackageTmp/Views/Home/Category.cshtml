@model List<WebApplication2.Models.Category>
    <ul class="left_menu">
        @for (var i = 0; i < Model.Count; i++)
        {
            if (i % 2 == 0)
            {
                <li class="odd"><a href="@Url.Action("Category","Category",new {cateId=Model[i].IDCategory })">@Model[i].Category1</a></li>
            }
            else
            {
                <li class="even"><a href="@Url.Action("Category","Category",new {cateId=Model[i].IDCategory })">@Model[i].Category1</a></li>
            }
        }
    </ul>

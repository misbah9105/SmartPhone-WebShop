@model WebApplication2.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        table, th, td {
            border: 1px white;
            border-collapse: collapse;
        }

        th, td {
            padding: 5px;
        }
    </style>
</head>
<body>
    <div class="center_content">
        @using (Html.BeginForm("Register", "User", FormMethod.Post))
        {
        <table style="width:100%">
            <tr>
                <td align="right">Fullname</td>
                <td>@Html.EditorFor(m => m.name)</td>
            </tr>
            <tr>
                <td></td>
            </tr>
            <tr>
                <td align="right">Email</td>
                <td>@Html.EditorFor(m => m.email)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })</td>
            </tr>
            <tr>
                <td align="right">Username<br></td>
                <td>@Html.TextBoxFor(m => m.username)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })</td>
            </tr>
            <tr>
                <td align="right">Password<br></td>
                <td>@Html.PasswordFor(m => m.Password)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</td>
            </tr>
            <tr>
                <td align="right">Confirm Password<br></td>
                <td>@Html.PasswordFor(m => m.confirmpassword)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(m => m.confirmpassword, "", new { @class = "text-danger" })</td>
            </tr>
            <tr>
                <td align="right">Address</td>
                <td>@Html.EditorFor(m => m.address)</td>
            </tr>
            <tr>
                <td></td>
            </tr>
            <tr>
                <td align="right">Phone number</td>
                <td>@Html.EditorFor(m => m.phone)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })</td>
            </tr>
            <tr>
                <td></td>
                <td>@ViewBag.notification</td>
            </tr>
        </table>
            <br>
            <input type="submit" value="Register" style="margin-left: 37%">
        }
    </div>
</body>
</html>
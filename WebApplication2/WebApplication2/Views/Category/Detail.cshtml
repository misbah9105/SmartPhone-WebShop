@model WebApplication2.Models.Product
@{
    ViewBag.Title = "Detail";
}
    <div class="center_content">
        <div class="center_title_bar">@Model.ProductName</div>
        <div class="prod_box_big">
            <div class="center_prod_box_big">
                <div class="product_img_big">
                    <img src="@Model.Image" alt="" height="71" width="94" border="0" />
                </div>
                <div class="details_big_box">
                    <div class="product_title_big">@Model.ProductName</div>
                    <div class="specifications">
                        Available: <span class="blue">In stock</span><br />
                        Warranties: <span class="blue">24 months</span><br />
                        Transport: <span class="blue"> delivery services company</span><br />
                        Include :<span class="blue"> TVA</span><br />
                        Description :<span class="blue">@Model.Describe</span><br />
                    </div>
                    <div class="prod_price_big"><span class="price">@Model.Price$</span></div>
                    <a href="@Url.Action("AddToCart","Cart",new {id=Model.IDProduct })" class="prod_buy">add to cart</a>
                </div>
            </div>
        </div>
    </div>
